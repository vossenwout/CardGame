<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".JoinGame">


    <EditText
        android:id="@+id/editTextLobbyName"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="lobby name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button7"
        android:layout_width="232dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:onClick="joinGameLobby"
        android:text="Join"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText" />

    <TextView
        android:id="@+id/lobbyFoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="lobby does not exist"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:onClick="goBack"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/passwordwrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:text="password is wrong"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lobbyFoundText"
        app:layout_constraintTop_toBottomOf="@+id/lobbyFoundText" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fadingEdge="horizontal|vertical|none"
        android:inputType="textPersonName"
        android:password="false"
        android:phoneNumber="false"
        android:text="password"
        app:layout_constraintEnd_toEndOf="@+id/editTextLobbyName"
        app:layout_constraintStart_toStartOf="@+id/editTextLobbyName"
        app:layout_constraintTop_toBottomOf="@+id/editTextLobbyName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:text="Fill in the lobby name and password to join a game hosted by another player."
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LobbyAlreadyContainsSameUser"
        android:layout_width="335dp"
        android:layout_height="36dp"
        android:text="Lobby already has a player with the same username. Go back to main menu and update username."
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordwrong" />
</androidx.constraintlayout.widget.ConstraintLayout>