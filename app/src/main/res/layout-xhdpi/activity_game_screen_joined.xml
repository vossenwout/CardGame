<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreenJoined">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="594dp"
        android:layout_height="319dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startText" />

    <ImageView
        android:id="@+id/playstack"
        android:layout_width="132dp"
        android:layout_height="228dp"
        android:layout_marginTop="44dp"
        android:onClick="takeFromStack"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/playstack2"
        android:layout_width="132dp"
        android:layout_height="228dp"
        android:layout_marginTop="36dp"
        android:onClick="takeFromStack"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/playstack3"
        android:layout_width="132dp"
        android:layout_height="228dp"
        android:layout_marginTop="28dp"
        android:onClick="takeFromStack"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/playstack4"
        android:layout_width="135dp"
        android:layout_height="232dp"
        android:layout_marginTop="16dp"
        android:onClick="takeFromStack"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/playstack5"
        android:layout_width="135dp"
        android:layout_height="232dp"
        android:layout_marginTop="4dp"
        android:onClick="takeFromStack"
        android:rotation="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="69dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="goBack"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal">


        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/startText"
        android:layout_width="215dp"
        android:layout_height="37dp"
        android:layout_marginTop="96dp"
        android:text="Wait for host to draw you cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playstack" />


</androidx.constraintlayout.widget.ConstraintLayout>